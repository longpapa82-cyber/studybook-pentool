# StudyBook E-Book Pentool Environment Variables

# Application
VITE_APP_NAME=StudyBook
VITE_APP_VERSION=1.0.0

# PDF.js Configuration
VITE_PDFJS_WORKER_SRC=https://cdn.jsdelivr.net/npm/pdfjs-dist@5.4.149/build/pdf.worker.min.mjs

# Storage Configuration
VITE_STORAGE_DB_NAME=studybook-db
VITE_STORAGE_DB_VERSION=2
VITE_MAX_PDF_SIZE=50 # in MB

# Performance Settings
VITE_THUMBNAIL_SIZE=150
VITE_MAX_ZOOM=3.0
VITE_MIN_ZOOM=0.5
VITE_ZOOM_STEP=0.25

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# API Endpoints (for future features)
# VITE_API_URL=https://api.studybook.com
# VITE_AUTH_URL=https://auth.studybook.com
